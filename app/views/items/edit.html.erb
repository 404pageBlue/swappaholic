<div class="container">
	<div class="row">
		<div class="col-md-6">
			<h2>Update Item</h2>

				<%= form_for @item do |f| %>

					<%= f.label :name %>
				<div>
					<%= f.text_field :name %>
				</div>

					<%= f.label :description %>
				<div>
					<%= f.text_field :description %>
				</div>

					<%= f.label :condition %>
				<div>
					<%= f.text_field :condition %>	
				</div>	

					<%= f.label :est_value %>
				<div>
					<%= f.text_field :est_value %>		
				</div>
				
					<%= f.label :willing_to_trade_for %>
				<div>
					<%= f.text_field :willing_to_trade_for %>
				</div><br>

					<%= f.submit "Update Item" %>

				<% end %>
		</div>
	</div>		
</div>
