	<!-- BOOTSTRAP GRID SYSTEM -->
		<div class="row">
			<% @items.each do |i| %>
				<div class="col-sm-6 col-md-4">
					<div class="thumbnail">
						<!-- <img data-src="holder.js/300x300"> -->
						<%= image_tag "desk.jpg"%>
						<div class="caption">
							<h3><%= i.name %></h3>
										<ul id="item_marketplace">
											<h4 class="label label-info" id="item_label">DESCRIPTION</h4>
											<li><%= i.description %></li>					<h4 class="label label-info" id="item_label">CATEGORY</h4>
											<li><%= i.category %></li>
											<h4 class="label label-info" id="item_label">CONDITION</h4>
											<li><%= i.condition %></li>
											<h4 class="label label-info" id="item_label">ESTIMATED VALUE</h4>
											<li><%= i.est_value %></li>
											<h4 class="label label-info" id="item_label">WILLING TO TRADE FOR</h4>
											<li><%= i.willing_to_trade_for %></li><h4 class="label label-info" id="item_label">USER ID</h4>
											<li><%= i.user.firstname %></li>
											<li><%= image_tag i.avatar.url(:square) %>></li>
											<span></span>
										</ul>
								<p><%= link_to "See More >>", item_path(i.id),:class => "btn btn-default" %></p>
					</div>
<!-- END OF BOOTSTRAP THUMB -->					
				</div>
		</div>
		<% end %>		
	</div>


